{
  "info": {
    "name": "CRM API â€” Success Suite",
    "_postman_id": "success-suite",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login Success",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{BASE_URL}}/auth/login",
        "body": { "mode": "raw", "raw": "{\"email\":\"{{EMAIL}}\",\"password\":\"{{PASSWORD}}\"}" }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Login 200 and token present', function () {",
          "  pm.response.to.have.status(200);",
          "  var j = pm.response.json();",
          "  pm.expect(j).to.have.property('token');",
          "  pm.environment.set('AUTH_TOKEN', j.token);",
          "});"
        ] }
      }]
    },

    {
      "name": "Create Prospect",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{AUTH_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{BASE_URL}}/prospects",
        "body": { "mode": "raw", "raw": "{\"name\":\"ACME Corp\",\"email\":\"prospect1@example.com\",\"status\":\"new\"}" }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Prospect created successfully', function () {",
          "  pm.response.to.have.status(201);",
          "  var j = pm.response.json();",
          "  pm.expect(j).to.have.property('id');",
          "  pm.environment.set('PROSPECT_ID', j.id);",
          "});"
        ] }
      }]
    },

    {
      "name": "List Prospects",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{AUTH_TOKEN}}" }],
        "url": "{{BASE_URL}}/prospects"
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Prospects list returns array', function () {",
          "  pm.response.to.have.status(200);",
          "  var arr = pm.response.json();",
          "  pm.expect(arr).to.be.an('array');",
          "});"
        ] }
      }]
    },

